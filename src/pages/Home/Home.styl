@import '../../commons/mixins.styl';

#home{
    .HomeHeader{
        position:fixed;
        top:0;
        left:0;
        z-index:10000;
        width:100%;
        height:1.47rem;
    }

    header {
        width: 100%;
        height: 0.88rem;
        background-color: white;
        padding: 0.16rem 0.3rem;
        box-sizing: border-box;
        display: flex;
        align-items: center;

        #logo {
            display: block;
            width: 1.38rem;
            height: 0.4rem;
            background: url('./images/logo.png') no-repeat;
            background-size: cover;
            margin-right: 0.2rem;
        }

        .topSearchIpt {
            i {
                display: inline-block;
                width: 0.28rem;
                height: 0.28rem;
                vertical-align: middle;
                background-image: url('./images/search.png');
                background-repeat: no-repeat;
                background-size: 100% 100%;
                margin-right: 0.1rem;
            }

            flex-grow: 1;
            color: #666;
            font-size: 0.28rem;
            display: flex;
            flex-flow: row nowrap;
            align-items: center;
            justify-content: center;
            width: 4.42rem;
            height: 0.56rem;
            background-color: #ededed;
            border-radius: 0.1rem;
        }

        .loginBtn {
            margin-left: 0.16rem;
            width: 0.72rem;
            height: 0.38rem;
            color: #b4282d;
            border: 0.01rem solid #b4282d;
            text-align: center;
            line-height: 0.38rem;
            border-radius: 0.076rem;
        }
    }

    .tabWrap {
        position: relative;
        z-index: 2;
        background: #fff;
        width: 100%;
        height: 0.6rem;
        margin-top: -0.01rem;
        padding: 0;

        .m-tabs {
            width: 100%;
            height: 100%;
            box-sizing: border-box;
            padding-right: 1rem;

            .header {
                display: flex;
                height: 100%;
                flex-flow: row nowrap;
                background-color: #fff;
                position: relative;

                .inner {
                    height: 100%;
                    position: relative;
                    width: 100%;
                    display: flex;
                    overflow: hidden;

                    .list {
                        display: flex;
                        flex-flow: row nowrap;
                        flex-shrink: 0;
                        height: 100%;
                        padding: 0 0.3rem;
                        background: #fff;

                        .tab {
                            margin-left: 0.2rem;
                            padding: 0 0.16rem;
                            flex-shrink: 0;
                            height: 100%;
                            position: relative;
                            display: flex;
                            flex-flow: row nowrap;
                            align-items: center;
                            justify-content: center;
                            z-index: 1;
                            text-align: center;

                            .txt {
                                display: inline-block;
                                line-height: 0.6rem;
                                font-size: 0.28rem;
                                color: #333;
                                text-align: center;
                            }

                            &:first-of-type {
                                margin-left: 0;
                            }

                            &.active {
                                color: #b4282d;

                                .txt {
                                    position: relative;
                                    color: #b4282d;
                                }

                                &::after {
                                    content: ' ';
                                    position: absolute;
                                    display: block;
                                    left: 0;
                                    bottom: 0.01rem;
                                    width: 100%;
                                    height: 0.04rem;
                                    background-color: #b4282d;
                                    box-sizing: border-box;
                                }
                            }
                        }
                    }
                }
            }
        }

        .toggleWrap {
            display: flex;
            flex-grow: 0;
            align-items: center;
            justify-content: center;
            position: absolute;
            top: 0;
            right: 0;
            line-height: 1.5;
            color: #333;

            .linear {
                width: 0.6rem;
                height: 0.6rem;
                background-image: linear-gradient(to right, rgba(255, 255, 255, 0) 0, #fff 100%);
            }

            .toggle {
                width: 1rem;
                height: 0.6rem;
                text-align: center;
                background: #fff;

                .icon {
                    width: 0.3rem;
                    height: 0.3rem;
                    background: url('./images/下拉按钮.png') no-repeat;
                    margin-top: 0.15rem;
                    display: inline-block;
                    vertical-align: middle;
                    background-size: 100% 100%;
                }
            }
        }
    }

    .slideWarp {
        height: 3.7rem;
        position: relative;
        margin-top:1.47rem;

        .m-indexSlide {
            padding-top: 3.7rem !important;
        }

        .m-slide {
            position: relative;
            width: 100%;
            overflow: hidden;

            .swiper-container, .slide-con {
                height: 100%;
                width: 100%;
            }

            .slide-con {
                position: absolute;
                left: 0;
                top: 0;
            }

            .swiper-container {
                margin-left: auto;
                margin-right: auto;
                position: relative;
                overflow: hidden;
                z-index: 1;

                .swiper-wrapper {
                    display: flex;
                    z-index: 1;
                    transition-property: transform, -webkit-transform;
                    box-sizing: content-box;
                    width: 100%;
                    height: 100%;
                    position: relative;

                    .swiper-slide {
                        position: relative;
                        flex-shrink: 0;
                        height: 100%;
                        width:100%;

                        a{
                            display:block;
                            width:100%;
                            height:100%;
                            img {
                                width: 100%;
                                height: auto;
                                position: absolute;
                                left: 0;
                                top: 50%;
                                transform: translateY(-50%);
                                background-color: #f9f9f9;
                                border: 0;
                            }
                        }
                    }
                }

                &.swiper-container-horizontal {
                    >.swiper-pagination-clickable {
                        display:inline-block;
                        height: 0.04rem;
                        position: absolute;
                        bottom: 0.3rem;
                        width: 100%;
                        text-align: center;
                        transition: 0.3s;
                        transform: translate3d(0, 0, 0);
                        z-index: 100;
                        font-size: 0rem;
                    }

                    >.swiper-pagination-bullets {
                        left: 0;
                    }
                }
            }
        }
    }

    .m-indexServicePolicy.active {
        background: #FFEDDB;

        .g-grow {
            width: 100%;
            height: 0.72rem;
            padding: 0 0.3rem;
            display: flex;
            flex-flow: row nowrap;
            align-items: center;
            zoom: 1;

            .item {
                flex: 1;
                float: left;

                a {
                    display: inline-block;
                    vertical-align: middle;
                    height: 0.32rem;
                    cursor: pointer;
                    font-size: 0px;

                    .u-icon {
                        background: url('./images/勾选.png') no-repeat;
                    }

                    .u-icon-servicePolicy-index {
                        display: inline-block;
                        vertical-align: middle;
                        background-size: 100% 100%;
                        width: 0.32rem;
                        height: 0.32rem;
                        font-style: normal;
                    }

                    .text {
                        color: #B4282D;
                        font-size: 0.24rem;
                        margin-left: 0.08rem;
                        line-height: 0.32rem;
                        display: inline-block;
                        vertical-align: middle;
                    }
                }
            }
        }
    }

    .m-kingKongModule {
        background-image: url('http://yanxuan.nosdn.127.net/56cd3b1….png');
        background-size: 100% 100%;
        width: 100%;
        height: 3.92rem;

        .m-carousel {
            background: 0 0;
            position: relative;

            .swiper-container {
                padding-bottom: 0.52rem;
                margin-left: auto;
                margin-right: auto;
                position: relative;
                overflow: hidden;
                z-index: 1;

                .swiper-wrapper {
                    height: auto;
                    position: relative;
                    width: 100%;
                    z-index: 1;
                    display: flex;
                    flex-wrap: wrap;
                    box-sizing: content-box;

                    .swiper-slide {
                        height: auto;
                        flex-shrink: 0;
                        position: relative;

                        .mb-9 {
                            margin-bottom: 0.12rem;
                        }

                        .kingkong-item {
                            display: block;
                            width: 1.1rem;
                            height: 1.56rem;
                            float: left;
                            margin: 0.1rem 0.2rem 0.09rem;

                            .icon {
                                width: 1.1rem;
                                height: 1.1rem;

                                img {
                                    width: 1.1rem;
                                    height: 1.1rem;
                                    display: block;
                                }
                            }

                            .txt {
                                color: #333333;
                                margin-top: 0.1rem;
                                text-align: center;
                                font-size: 0.24rem;
                                line-height: 0.36rem;
                                white-space: nowrap;
                            }
                        }
                    }
                }
            }
        }
    }

    .m-indexFloor {
        background-color: #fff;

        &.m-freshmanModule {
            background: #fff;
            margin-top: 0.2rem;
            overflow: hidden;
            padding-bottom: 0.3rem;

            .moduleTitle {
                height: 0.9rem;
                width: 100%;
                line-height: 0.9rem;
                text-align: center;
                font-family: PingFangSC-Regular;
                font-size: 0.32rem;
                padding: 0 0.4rem;
                background: #fff;
                overflow: hidden;

                .txt {
                    display: inline-block;
                    position: relative;

                    &::before {
                        left: -0.4rem;
                    }

                    &::after {
                        right: -0.4rem;
                    }

                    &::before, &::after {
                        content: '';
                        position: absolute;
                        top: 0.45rem;
                        width: 0.24rem;
                        height: 0.03rem;
                        background: #333;
                    }
                }
            }

            .content {
                padding-left: 0.3rem;
                overflow: hidden;

                .left {
                    display: block;
                    width: 3.43rem;
                    height: 4.34rem;
                    background: #F9E9CF;
                    border-radius: 0.04rem;
                    margin-right: 0.04rem;
                    float: left;
                    color: #333;

                    .name {
                        font-family: PingFangSC-Medium;
                        font-size: 0.32rem;
                        padding: 0.3rem 0 0 0.3rem;
                    }

                    .imgWrap {
                        margin: 0.5rem auto;
                        width: 2.28rem;
                        height: 2.29rem;
                        position: relative;

                        .img {
                            width: 2.28rem;
                            height: 2.29rem;

                            img {
                                display: inline;
                                height: 100%;
                                width: 100%;
                            }
                        }

                        .animate {
                            position: absolute;
                            width: 0.3rem;
                            height: 0.2rem;
                            bottom: 0.18rem;
                            right: 0.45rem;
                            background: url('./images/滚动箭头.png') no-repeat;
                            background-size: 100% 100%;
                            animation: carousel 1s linear infinite;
                        }
                    }
                }

                .right {
                    float: left;

                    .module1 {
                        background: #FBE2D3;
                        border-radius: 0.04rem;
                        width: 3.43rem;
                        height: 2.15rem;
                        margin-bottom: 0.04rem;

                        .m-activityItem {
                            background-image: url();
                            background-size: 100% 100%;
                            height: 1.95rem;
                            display: block;
                            color: #333;
                            width: 3.43rem;
                            float: left;
                            border-radius: 0.05333rem;
                            margin: 0 0.04rem 0.04rem 0;
                            font-size: 0.24rem;
                            padding: 0.2rem 0 0 0.3rem;
                            position: relative;

                            .picWrap {
                                top: 0.2rem;
                                position: absolute;
                                right: 0;
                                width: 2rem;
                                height: 2rem;

                                .pic {
                                    width: 2rem;
                                    height: 2rem;

                                    img {
                                        width: 100%;
                                        height: auto;
                                    }
                                }

                                .discount {
                                    top: 0;
                                    right: 0.3rem;
                                    position: absolute;
                                    width: 0.8rem;
                                    height: 0.8rem;
                                    opacity: 0.8;
                                    background: #F59524;
                                    border-radius: 50%;
                                    padding-top: 0.1rem;
                                    color: #fff;
                                    text-align: center;

                                    .line1 {
                                        font-size: 0.24rem;
                                    }

                                    .line2 {
                                        font-size: 0.2rem;
                                        margin-top: -0.07rem;
                                        text-decoration: line-through;
                                    }
                                }
                            }

                            .cnt {
                                position: relative;

                                .title {
                                    font-family: PingFangSC-Medium;
                                    font-size: 0.32rem;
                                }

                                .subTitle {
                                    color: #7F7F7F;
                                }
                            }
                        }
                    }

                    .module2 {
                        background: #FFECC2;
                        border-radius: 0.04rem;
                        width: 3.43rem;
                        height: 2.15rem;
                        .m-activityItem{
                            // background-image: url(undefined);
                            // background-size: 100% 100%;
                            height: 1.95rem;
                            display: block;
                            color: #333;
                            width: 3.43rem;
                            float: left;
                            position:relative;
                            border-radius: 0.04rem;
                            margin: 0 0.04rem 0.04rem 0;
                            font-size: 0.24rem;
                            padding: 0.2rem 0 0 0.3rem;
                            .picWrap{
                                top: 0.2rem;
                                position: absolute;
                                right: 0;
                                width: 2rem;
                                height: 2rem;
                                .pic {
                                    width: 2rem;
                                    height: 2rem;

                                    img {
                                        display: inline;
                                        width: 100%;
                                        height: auto;
                                    }
                                }

                                .discount {
                                    top: 0;
                                    right: 0.3rem;
                                    position: absolute;
                                    width: 0.8rem;
                                    height: 0.8rem;
                                    opacity: 0.8;
                                    background: #F59524;
                                    border-radius: 50%;
                                    padding-top: 0.1rem;
                                    color: #fff;
                                    text-align: center;

                                    .line1 {
                                        font-size: 0.24rem;
                                    }

                                    .line2 {
                                        font-size: 0.2rem;
                                        margin-top: -0.07rem;
                                        text-decoration: line-through;
                                    }
                                }
                            }
                            .cnt {
                                position: relative;

                                .title {
                                    font-family: PingFangSC-Medium;
                                    font-size: 0.32rem;
                                }

                                .subTitle {
                                    color: #7F7F7F;
                                }

                                .tag{
                                    position: relative;
                                    display: inline-block;
                                    padding: 0 0.1rem;
                                    height: 0.32rem;
                                    background: #CBB693;
                                    border-radius: 0.04rem;
                                    color: #fff;
                                    font-size: 0.22rem;
                                    line-height: 0.34rem;
                                    text-align: center;
                                }
                            }
                        }
                    }
                }
            }
        }
    }

    .m-indexManufacturersSupplying{
        padding-bottom: 0.08rem;
        margin-top: 0.2rem;
        margin-bottom: 0.5rem;
        overflow hidden
        width 100%
        .moduleTitle{
            width: 100%;
            height: 1rem;
            line-height: 1rem;
            padding: 0 0.3rem;
            background: #fff;
            overflow: hidden;
            .left{
                float: left;
                font-size: 0.32rem;
                font-family: PingFangSC-Regular;
            }
            .right{
                display: block;
                font-size: 0.28rem;
                float: right;
                color: #333;
                line-height: 1rem;
                .u-icon{
                    margin: -0.05rem 0 0 0.08rem;
                }
                .u-icon-index-titleArrow{
                    display: inline-block;
                    vertical-align: middle;
                    background-image: url('./images/右箭头.png');
                    background-repeat: no-repeat;
                    background-size: 100% 100%;
                    width: 0.13rem;
                    height: 0.23rem;
                }
            }
        }
        .list{
            position: relative;
            overflow: hidden;
            background: #fff;
            margin-bottom: 0.2rem;
            padding: 0 0.26rem 0.26rem 0.3rem;
